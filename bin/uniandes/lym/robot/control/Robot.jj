		|  < DEFINE : "DEFINE" >
		|  < TO : "TO" >
		|  < OUTPUT : "OUTPUT" >
		|  < END : "END" >
}

TOKEN :
{
		<NUMERO: (<DIGIT>)+ >
	    | <VARIABLE : (< LETTER >)+>
	    | < PARAM : ":"(< LETTER >)+ >
		| <#DIGIT: ["0"-"9"] >
		| <#LETTER: ["a"-"z"]>
}

