boolean command(StringBuffer sistema):
	{		
		int x;
		salida=new String();
		if(bufferInstanced == false) {
		  salidaS = sistema;
		  bufferInstanced = true;
		}
	}
	{
		(
			(
			(    
			   <MOVE>   numero()
	    	|  <RIGHT>  numero()
			|  <LEFT>   numero()
			|  <ROTATE> numero()
			|  <DROP>   numero()
			|  <FREE>   numero()
			|  <PICK>   numero()
		    |  <POP>    numero()
		    |  <BLOCKEDP>
		    |  <NOP>
		    |  <LOOK>   ("N"|"E"|"W"|"S")
		    |  <CHECK>  ("C"|"B") numero()
		    |  block()
		    |  repeat()
		    |  conditional()
		    |  define()
		    |  function()
		    |  funcall()
		    |  varcall()
			) ("\n")+)
			|  "\n"
        )+
		{
		  //  try {
	      //  Thread.sleep(1);
	      //  }catch (InterruptedException e) {
	      //   System.err.format("IOException: %s%n", e);
	      //  }
		salidaS.append(salida);
		return true;
		}
	    | <EOF> {return false; }
	}

